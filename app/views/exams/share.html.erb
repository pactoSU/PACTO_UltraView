<% if signed_in? %>
	
	
  
<%  @cursor.each {|doc, counter| %>
	<p>   Modality: <%= doc["Modality"].to_s %> 
	<br> Physician's Name: <%= doc["Referring Physician's Name"].to_s %> 
	<br> Patient's Name: <%= doc["Patient's Name"].to_s %> 
	<br> Study Date: <%= doc["Study Date"].to_s %> 
	<br> <br> Shared with users:
	<% acl = doc["accessList"] %> 
	<% acl.each {|user| %> 
	<br> <%=user %>
	<% } %> </p>

<%  } %>


<%= form_tag(:controller=> "exams", :action => "addUser") do %>
	<%= label_tag(:user, "Name of user you would like to share with:") %>
	<%= hidden_field_tag :id, @id %>
	<%= text_field_tag(:user) %>
	<%= submit_tag ("Share With User") %>
	<% end %>

<% end %>
