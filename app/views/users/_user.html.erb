<li>
	<%= gravatar_for user, size: 52 %>
	<%= link_to user.name, user %>
	<%= link_to 'Edit Settings', {:controller=> 'users', :action => 'edit', :id => user } %>
	<% if current_user.admin? && !current_user?(user) %>
		| <%= link_to "delete", user, method: :delete, data: { confirm: "You sure you want to delete this user?" } %>
	<% end %>
</li>
